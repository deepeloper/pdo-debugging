{
    "name": "deepeloper/pdo-debugging",
    "type": "library",
    "description": "PDO Debugging & Benchmarking Tools",
    "keywords": ["php", "library", "db", "database", "pdo", "debug"],
    "homepage": "https://github.com/deepeloper/pdo-debugging",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "require": {
        "php": ">=7.3 <7.4",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpdocumentor/phpdocumentor": "^3",
        "squizlabs/php_codesniffer": "3.*",
        "friendsofphp/php-cs-fixer": "*"
    },
    "autoload": {
        "psr-4": {
            "deepeloper\\PDO\\": ["src"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "deepeloper\\PDO\\": ["tests", "tests/src"]
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12"
    }
}
